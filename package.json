{
  "name": "figma-ai-ticket-generator",
  "version": "1.0.0",
  "description": "Production-ready AI-enhanced Figma plugin with MVC architecture for generating comprehensive development tickets",
  "type": "module",
  "main": "dist/code.js",
  "scripts": {
    "start": "node app/main.js",
    "start:mvc": "node app/main.js",
    "start:dev": "nodemon --watch app/ --watch core/ --watch config/ --ext js app/main.js",
    "start:test-server": "node tests/playwright/test-server.cjs",
    "dev": "npm run start:dev",
    "build": "./scripts/build-simple.sh",
    "build:legacy": "./scripts/build.sh",
    "build:ts": "tsc -p config/tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "eslint . --fix",
    
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "VITEST_COVERAGE=true vitest run --coverage",
    "test:suite": "echo 'ðŸ§ª Opening Ultimate Test Suite...' && open tests/integration/test-consolidated-suite.html",
    "test:all": "node scripts/test-orchestrator.js all",
    "test:browser": "node scripts/browser-test-suite.js smoke",
    "test:browser:smoke": "node scripts/browser-test-suite.js smoke",
    "test:mcp": "node tests/integration/test-standalone.mjs",
    "test:templates": "node scripts/test-orchestrator.js templates",
    "test:ai": "node scripts/test-orchestrator.js ai",
    
    "monitor": "node scripts/monitor-dashboard.js",
    "health": "./scripts/health-check.sh",
    "validate": "npm run test && npm run build && echo 'âœ… All validation passed'",
    
    "test:browser:full": "node scripts/browser-test-suite.js full",
    "test:browser:visual": "node scripts/browser-test-suite.js visual",
    "test:all:full": "node scripts/test-orchestrator.js all --full",
    "test:reports": "echo 'ðŸ“Š Opening test reports...' && find tests/test-results -name 'index.html' -exec open {} \\;",
    
    "deploy": "./scripts/deploy-production.sh",
    "deploy:prod": "./scripts/deploy-production-comprehensive.sh production false false",
    "deploy:dev": "./scripts/deploy-production-comprehensive.sh development false true",
    "deploy:staging": "./scripts/deploy-production-comprehensive.sh staging true false",
    "deploy:quick": "./scripts/deploy-production-comprehensive.sh development true true",
    "deploy:full": "./scripts/deploy-production-comprehensive.sh production false true",
    "bundle": "./scripts/bundle-production.sh",
    "validate:prod": "./scripts/validate-production-comprehensive.sh",
    "validate:basic": "./scripts/validate-production.sh",
    "package": "npm run deploy:prod && echo 'ðŸš€ Plugin packaged for distribution'",
    "release": "npm run deploy:full && npm run validate:prod && echo 'ðŸŽ‰ Release ready!'",
    "quick-deploy": "npm run sync && npm run validate:prod && echo 'âš¡ Quick deployment complete'"
  },
  "keywords": [
    "figma",
    "plugin",
    "jira",
    "ai",
    "automation",
    "ticket",
    "openai"
  ],
  "author": "David G Smith",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@figma/plugin-typings": "^1.118.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "nodemon": "^3.1.10",
    "playwright": "^1.56.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.2"
  },
  "figma": {
    "manifest": "manifest.json",
    "main": "dist/code.js",
    "ui": "dist/ui/index.html"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "node-fetch": "^3.3.2"
  }
}
