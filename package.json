    "test:templates:ai": "node tests/templates/integration/ai-template-flow.test.js",
    "monitor": "node scripts/live-monitor.js",
    "monitor:performance": "node scripts/monitor-performance.js",
    "monitor:health": "node scripts/monitor-health.js",
    "monitor:live": "node scripts/live-monitor.js",
    "dev:monitor": "node scripts/live-monitor.js",
    "health": "./scripts/health-check.sh",
    "deploy": "./scripts/deploy-production.sh",
    "deploy:prod": "./scripts/deploy-production-comprehensive.sh production false false",
    "deploy:dev": "./scripts/deploy-production-comprehensive.sh development false true",
    "deploy:staging": "./scripts/deploy-production-comprehensive.sh staging true false",
