{
  "name": "figma-ai-ticket-generator",
  "version": "1.0.0",
  "description": "Production-ready AI-enhanced Figma plugin with MVC architecture for generating comprehensive development tickets",
  "type": "module",
  "main": "code.js",
  "scripts": {
    "start": "node app/server.js",
    "start:dev": "nodemon --watch app/ --watch core/ --watch config/ --ext js app/server.js",
    "start:legacy": "node app/archive/main.js.legacy",
    "start:legacy:dev": "nodemon --watch app/ --watch core/ --watch config/ --ext js app/archive/main.js.legacy",
    "start:test-server": "node tests/playwright/test-server.cjs",
    "dev": "npm run start:dev",
    "build": "./scripts/build-simple.sh",
    "build:ts": "tsc -p config/tsconfig.json",
    "clean": "rm -f code.js",
    "lint": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "VITEST_COVERAGE=true vitest run --coverage",
    "test:all": "node scripts/test-orchestrator.js all",
    "test:browser": "node scripts/browser-test-suite.js smoke",
    "test:browser:smoke": "npx playwright test --config=tests/playwright/smoke.config.js",
    "test:browser:regression": "npx playwright test --config=tests/playwright/regression.config.js",
    "test:browser:ci": "npx playwright test --config=tests/playwright/ci.config.js",
    "test:browser:visual": "npx playwright test --config=tests/playwright/visual.config.js",
    "test:mcp": "node tests/integration/test-standalone.mjs",
    "test:templates": "node scripts/test-orchestrator.js templates",
    "test:ai": "node scripts/test-orchestrator.js ai",
    "monitor": "node scripts/monitor-dashboard.js",
    "health": "./scripts/health-check.sh",
    "validate": "npm run test && npm run build && npm run validate:yaml && echo 'âœ… All validation passed'",
    "validate:yaml": "node scripts/validate-yaml.js",
    "fix:yaml": "node scripts/fix-yaml.js",
    "package": "npm run build && echo 'ðŸš€ Plugin ready for Figma Desktop'",
    "release": "npm run build && npm run test && echo 'ðŸŽ‰ Plugin tested and ready!'"
  },
  "keywords": [
    "figma",
    "plugin",
    "jira",
    "ai",
    "automation",
    "ticket",
    "openai"
  ],
  "author": "David G Smith",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@figma/plugin-typings": "^1.118.0",
    "@playwright/test": "^1.56.1",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "nodemon": "^3.1.10",
    "playwright": "^1.56.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.2",
    "yaml-lint": "^1.7.0"
  },
  "figma": {
    "manifest": "manifest.json",
    "main": "code.js",
    "ui": "ui/index.html"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fs-extra": "^11.3.2",
    "inquirer": "^12.10.0",
    "ioredis": "^5.8.2",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2"
  }
}
