{
  "name": "figma-ai-ticket-generator",
  "version": "1.0.0",
  "description": "Production-ready AI-enhanced Figma plugin with MVC architecture for generating comprehensive development tickets",
  "type": "module",
  "main": "dist/code.js",
  "scripts": {
    "start": "node app/server/main.js",
    "start:mvc": "node app/server/main.js",
    "start:dev": "nodemon --watch app/ --watch core/ --watch config/ --ext js app/server/main.js",
    "dev": "npm run start:dev",
    "build": "./scripts/build.sh",
    "build:plugin": "node scripts/build-plugin.js",
    "build:ts": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint 'app/**/*.js' 'core/**/*.js' 'config/**/*.js' --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage", 
    "test:mcp": "node tests/integration/test-standalone.mjs",
    "test:suite": "echo 'ðŸ§ª Opening Ultimate Test Suite...' && open tests/integration/test-consolidated-suite.html",
    "health": "./scripts/health-check.sh",
    "deploy": "./scripts/deploy-production.sh",
    "bundle": "./scripts/bundle-production.sh",
    "validate": "npm run test:run && npm run build && echo 'âœ… All validation passed'"
  },
  "keywords": [
    "figma",
    "plugin",
    "jira",
    "ai",
    "automation",
    "ticket",
    "openai"
  ],
  "author": "David G Smith",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@figma/plugin-typings": "^1.118.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "nodemon": "^3.1.10",
    "playwright": "^1.56.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.2"
  },
  "figma": {
    "manifest": "manifest.json",
    "main": "dist/code.js",
    "ui": "dist/ui/index.html"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
