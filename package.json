{
  "name": "figma-ai-ticket-generator",
  "version": "1.0.0",
  "description": "Production-ready AI-enhanced Figma plugin with MVC architecture for generating comprehensive development tickets",
  "type": "module",
  "main": "code.js",
  "scripts": {
    "start": "node app/server.js",
    "start:dev": "nodemon --watch app/ --watch core/ --watch config/ --ext js app/server.js",
    "dev": "npm run start:dev",
    "build": "./scripts/build-simple.sh",
    "build:ts": "tsc -p config/tsconfig.json",
    "clean": "rm -f code.js",
    "lint": "eslint . --fix",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit && npm run lint",

    "test": "vitest run tests/unit",
    "test:run": "vitest run",
    "test:watch": "vitest watch tests/unit",
    "test:coverage": "VITEST_COVERAGE=true vitest run --coverage",
    "test:integration": "node scripts/test-external-mcp.js",
    "test:smoke": "npx playwright test tests/smoke",
    "test:all": "npm run test && npm run validate:yaml && npm run build && echo 'âœ… All checks passed'",

    "health": "./scripts/health-check.sh",
    "validate": "npm run test:run && npm run build && npm run validate:yaml && echo 'âœ… All validation passed'",
    "validate:yaml": "node scripts/validate-yaml.js",
    "fix:yaml": "node scripts/fix-yaml.js",

    "docker:build": "docker build -t figma-ticket-generator .",
    "docker:run": "docker run -p 3000:3000 --env-file .env figma-ticket-generator",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:health": "docker-compose ps",

    "bundle": "npm run build && npm run package && echo 'ðŸ“¦ Bundle created'",
    "package": "npm run build && echo 'ðŸš€ Plugin ready for Figma Desktop'",
    "release": "npm run build && npm run test && echo 'ðŸŽ‰ Plugin tested and ready!'"
  },
  "keywords": [
    "figma",
    "plugin",
    "jira",
    "ai",
    "automation",
    "ticket",
    "openai"
  ],
  "author": "David G Smith",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@figma/plugin-typings": "^1.118.0",
    "@playwright/test": "^1.56.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.0.0",
    "vitest": "^4.0.2",
    "yaml-lint": "^1.7.0"
  },
  "figma": {
    "manifest": "manifest.json",
    "main": "code.js",
    "ui": "ui/index.html"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.21.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.0"
  }
}
