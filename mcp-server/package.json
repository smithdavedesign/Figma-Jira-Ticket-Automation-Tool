{
  "name": "@figma-ai-ticket-generator/mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for strategic design-to-code automation",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:quick": "node tests/quick-test.mjs",
    "test:comprehensive": "node tests/comprehensive-test-suite.mjs",
    "test:ai": "node tests/test-ai-integration.mjs",
    "test:visual": "node tests/test-visual-enhanced.mjs",
    "demo:visual": "node demos/visual-enhanced-demo-server.mjs",
    "demo:architecture": "node demos/architecture-demo.js",
    "demo:victory": "node demos/victory-test.mjs",
    "scripts:setup": "bash scripts/setup.sh",
    "scripts:debug": "node scripts/debug-gemini.mjs",
    "scripts:verify": "node scripts/verify-gemini-usage.js",
    "lint": "eslint src/**/*.js || echo 'No JS files to lint'",
    "lint:ts": "npm run type-check",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "figma",
    "design-automation",
    "ai-agent",
    "design-system",
    "project-analysis"
  ],
  "author": "Figma AI Ticket Generator Team",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.25.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smithdavedesign/Figma-Jira-Ticket-Automation-Tool.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/smithdavedesign/Figma-Jira-Ticket-Automation-Tool/issues"
  },
  "homepage": "https://github.com/smithdavedesign/Figma-Jira-Ticket-Automation-Tool#readme",
  "publishConfig": {
    "access": "public"
  }
