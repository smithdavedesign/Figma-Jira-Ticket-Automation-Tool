{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "DOM"],
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["@figma/plugin-typings"]
  },
  "include": [
    "code.ts",
    "types.ts",
    "design-system-scanner.ts",
    "compliance-analyzer.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}